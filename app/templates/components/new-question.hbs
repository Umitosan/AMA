{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body"}}
      </div>

      <button class="btn btn-default btn-sm" {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default btn-sm" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
