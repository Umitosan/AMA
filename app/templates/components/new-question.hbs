{{#if addNewQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="body">Question</label>
        {{textarea value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="note">Note</label>
        {{input value=note id="note"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button class="btn btn-default btn-sm" {{action 'saveQuestion'}}>Post it!</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default btn-sm" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
