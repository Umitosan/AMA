
<hr>
<h3>Answers</h3>
{{#if addNewAnswer}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>
      <button class="btn btn-default btn-sm" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default btn-sm" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}


<div id="answers">
  {{#each question.answers as |answer|}}
    <p><span id="ans">A:  </span> {{answer.content}} </p>
    <p class="author"> ~ {{answer.author}} </p>
  {{/each}}
</div>


